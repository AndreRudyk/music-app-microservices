{
  "id": null,
  "title": "Music App Microservices Monitoring - Enhanced",
  "tags": [
    "microservices",
    "spring-boot",
    "music-app",
    "jvm",
    "api-gateway"
  ],
  "style": "dark",
  "timezone": "browser",
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Service Health Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=~\".*service.*|.*gateway.*|.*registry.*\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN"
                },
                "1": {
                  "text": "UP"
                }
              },
              "type": "value"
            }
          ]
        }
      },
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "API Gateway - Request Count",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(spring_cloud_gateway_requests_seconds_count{job=\"api-gateway\"}[5m])) by (routeId)",
          "legendFormat": "{{routeId}}",
          "refId": "A"
        },
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"api-gateway\"}[5m])) by (uri)",
          "legendFormat": "{{uri}} (HTTP)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      }
    },
    {
      "id": 3,
      "title": "API Gateway - Request Latency",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(spring_cloud_gateway_requests_seconds_bucket{job=\"api-gateway\"}[5m])) by (le, routeId))",
          "legendFormat": "95th percentile - {{routeId}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(spring_cloud_gateway_requests_seconds_bucket{job=\"api-gateway\"}[5m])) by (le, routeId))",
          "legendFormat": "50th percentile - {{routeId}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=\"api-gateway\"}[5m])) by (le, uri))",
          "legendFormat": "95th percentile - {{uri}} (HTTP)",
          "refId": "C"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_server_requests_seconds_bucket{job=\"api-gateway\"}[5m])) by (le, uri))",
          "legendFormat": "50th percentile - {{uri}} (HTTP)",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      }
    },
    {
      "id": 5,
      "title": "JVM Memory Usage (Heap)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\"} / jvm_memory_max_bytes{area=\"heap\"} * 100",
          "legendFormat": "{{job}} - Heap Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 22
      }
    },
    {
      "id": 6,
      "title": "JVM Memory Usage (Non-Heap)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"nonheap\"} / jvm_memory_max_bytes{area=\"nonheap\"} * 100",
          "legendFormat": "{{job}} - Non-Heap Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 22
      }
    },
    {
      "id": 7,
      "title": "JVM Garbage Collection Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_sum[5m])",
          "legendFormat": "{{job}} - {{gc}} GC Time/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 30
      }
    },
    {
      "id": 8,
      "title": "JVM Thread Count",
      "type": "timeseries",
      "targets": [
        {
          "expr": "jvm_threads_live_threads",
          "legendFormat": "{{job}} - Live Threads",
          "refId": "A"
        },
        {
          "expr": "jvm_threads_daemon_threads",
          "legendFormat": "{{job}} - Daemon Threads",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 30
      }
    },
    {
      "id": 9,
      "title": "JVM Class Loading",
      "type": "timeseries",
      "targets": [
        {
          "expr": "jvm_classes_loaded_classes",
          "legendFormat": "{{job}} - Loaded Classes",
          "refId": "A"
        },
        {
          "expr": "rate(jvm_classes_unloaded_classes_total[5m])",
          "legendFormat": "{{job}} - Unloaded Classes/sec",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 38
      }
    },
    {
      "id": 10,
      "title": "Database Connection Pool Metrics",
      "type": "timeseries",
      "targets": [
        {
          "expr": "hikaricp_connections_active",
          "legendFormat": "{{job}} - Active Connections",
          "refId": "A"
        },
        {
          "expr": "hikaricp_connections_idle",
          "legendFormat": "{{job}} - Idle Connections",
          "refId": "B"
        },
        {
          "expr": "hikaricp_connections_max",
          "legendFormat": "{{job}} - Max Connections",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 38
      }
    },
    {
      "id": 11,
      "title": "HTTP Request Rate by Service",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count[5m])) by (job)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 46
      }
    },
    {
      "id": 12,
      "title": "System CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "system_cpu_usage * 100",
          "legendFormat": "{{job}} - CPU Usage %",
          "refId": "A"
        },
        {
          "expr": "process_cpu_usage * 100",
          "legendFormat": "{{job}} - Process CPU %",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 46
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "query": "label_values(up, job)",
        "refresh": 1,
        "includeAll": true,
        "multi": true
      }
    ]
  }
}
