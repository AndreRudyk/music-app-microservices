<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- File appender (optional - for debugging if needed) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/api-gateway.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level [%logger{36}] [%X{traceId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Loki appender (keep for centralized logging) -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>http://loki:3100/loki/api/v1/push</url>
        </http>
        <format>
            <label>
                <pattern>service=api-gateway,level=%level</pattern>
            </label>
            <message>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level [%logger{36}] [traceId=%X{traceId}] - %msg%n</pattern>
            </message>
        </format>
    </appender>

    <!-- Root logger - NO CONSOLE APPENDER, only file and loki -->
    <root level="OFF">
        <appender-ref ref="FILE"/>
        <appender-ref ref="LOKI"/>
    </root>

    <!-- Suppress all service specific loggers -->
    <logger name="apigateway" level="OFF"/>
    <logger name="org.springframework" level="OFF"/>
    <logger name="org.springframework.cloud.gateway" level="OFF"/>
    <logger name="org.springframework.boot" level="OFF"/>
    <logger name="reactor" level="OFF"/>
    <logger name="io.netty" level="OFF"/>
</configuration>
